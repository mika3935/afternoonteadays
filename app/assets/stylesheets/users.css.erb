.cover-user-show {
  min-height: 120vh; /* 画面より少し長めにして余白不足を解消 */
  width: 100%;
  background-image: url(<%= asset_path 'mypage.png' %>);
  background-color: rgba(255, 255, 255, 0.36);
  background-blend-mode: lighten;
  background-size: cover; /* 縦横比を保ちつつ全体に敷く */
  background-position: center;
  padding-bottom: 120px; /* フッターやコンテンツの余白確保 */
}

/* プロフィール画像のサイズ調整 */
.cover-user-show .profile-img {
  width: 100px;
  height: 100px;
  object-fit: cover;
  display: inline-block;
}

/* ユーザー一覧のサムネイル */
.cover-user-index .profile-img {
  width: 50px;
  height: 50px;
  object-fit: cover;
  display: inline-block;
}

.cover-user-index {
  height: 100%;
  width: 100%;
  background-image: url(<%= asset_path 'users.png' %>);
  background-color: rgba(255, 255, 255, 0.4);
  background-blend-mode: lighten;
  background-size: 100% 100%;
}

.cover-user-edit {
  height: 100%;
  width: 100%;
  background-image: url(<%= asset_path 'mypage_edit.png' %>);
  background-color: rgba(255, 255, 255, 0.4);
  background-blend-mode: lighten;
  background-size: 100% 100%;
}

.profile {
  padding: 15px;
}

/* スマホ・タブレット対応 */
@media (max-width: 768px) {
  .cover-user-show,
  .cover-user-index,
  .cover-user-edit {
    background-size: cover;       /* 縦横比を保って拡大 */
    background-position: center;  /* 画像の中央を基準に表示 */
    height: auto;                 /* コンテンツに合わせて高さ可変 */
    padding: 40px 10px;           /* スマホ用の余白 */
  }

  .profile {
    padding: 10px;
  }
}
