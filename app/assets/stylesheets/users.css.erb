.cover-user-show {
  height: 150%;
  width: 100%;
  background-image: url(<%= asset_path 'mypage.png' %>);
  background-color: rgba(255, 255, 255, 0.4);
  background-blend-mode: lighten;
  background-size: 100% 100%;
}

.cover-user-index {
  height: 100%;
  width: 100%;
  background-image: url(<%= asset_path 'users.png' %>);
  background-color: rgba(255, 255, 255, 0.4);
  background-blend-mode: lighten;
  background-size: 100% 100%;
}

.cover-user-edit {
  height: 100%;
  width: 100%;
  background-image: url(<%= asset_path 'mypage_edit.png' %>);
  background-color: rgba(255, 255, 255, 0.4);
  background-blend-mode: lighten;
  background-size: 100% 100%;
}

.profile {
  padding: 15px;
}

/* スマホ・タブレット対応 */
@media (max-width: 768px) {
  .cover-user-show,
  .cover-user-index,
  .cover-user-edit {
    background-size: cover;       /* 縦横比を保って拡大 */
    background-position: center;  /* 画像の中央を基準に表示 */
    height: auto;                 /* コンテンツに合わせて高さ可変 */
    padding: 40px 10px;           /* スマホ用の余白 */
  }

  .profile {
    padding: 10px;
  }
}
