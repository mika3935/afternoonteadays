<h1>投稿一覧</h1>

<% @posts.each do |post| %>
  <p>店名: <%= link_to post.location, post_path(post) %></p>
  <p>感想: <%= post.text %></p>

  <% if post.image.present? %>
    <%= attachment_image_tag post, :image, format: 'jpeg', size: '100x100' %>
  <% else %>
    <p>画像なし</p>
  <% end %>

  <hr>
<% end %>

<%= link_to '新規投稿', new_post_path %>
