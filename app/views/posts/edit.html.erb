<h1>投稿を編集する</h1>

<%= form_with model: @post, local: true do |f| %>
  <h4>店名</h4>
  <%= f.text_field :location %>

  <h4>感想</h4>
  <%= f.text_area :text %>

  <h4>画像</h4>
  <% if @post.image.present? %>
    <p>現在の画像:</p>
    <%= attachment_image_tag @post, :image, format: 'jpeg', size: "150x150" %><br>
  <% end %>
  <%= f.file_field :image %>

  <p></p>
  <%= f.submit '更新する' %>
<% end %>
