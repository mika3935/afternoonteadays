 /* ------------------------------
   背景・中央配置（トップページカバー）
------------------------------ */
.cover {
  height: 100vh;
  width: 100%;
  display: table;
  background-image: image-url('top-scaled.webp'); 
  background-size: cover;
  background-position: center;
  position: relative;
}

.cover::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 192, 203, 0.3); 
  z-index: 0;
}

.text-center {
  display: table-cell;
  vertical-align: middle;
  text-align: center;
  position: relative;
  z-index: 1;
}

/* ------------------------------
   タイトル
------------------------------ */
.title {
  font-family: 'Pacifico', cursive; 
  font-size: 48px;
  color: #fff;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  margin-bottom: 10px;
}

.sub-title {
  font-family: 'Noto Serif JP', serif;
  font-size: 20px;
  color: #fff;
  margin-bottom: 20px;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
}

/* ------------------------------
   ボタン
------------------------------ */
.btn {
  border-radius: 20px;
  padding: 10px 20px;
  font-weight: bold;
  text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(to right, #f7c6c7, #f9a1b0);
  color: #fff;
}

.btn-primary:hover {
  background: linear-gradient(to right, #f9a1b0, #f7c6c7);
  cursor: pointer;
}

.btn-success {
  background: linear-gradient(to right, #a3e7d3, #66d9b3);
  color: #fff;
}

.btn-success:hover {
  background: linear-gradient(to right, #66d9b3, #a3e7d3);
  cursor: pointer;
}


.btn-group .mr-2 { margin-right: 10px; }
.btn-group .ml-2 { margin-left: 10px; }




@media (max-width: 1024px) {
  .title { font-size: 40px; }
  .sub-title { font-size: 18px; }
  .btn { padding: 8px 16px; font-size: 14px; }
}


@media (max-width: 768px) {
  .cover {
    background-position: center top;
    background-attachment: scroll; 
  }
  .title { font-size: 32px; }
  .sub-title { font-size: 16px; }
  .btn {
    width: 80%;
    max-width: 250px;
    display: inline-block;
    font-size: 14px;
  }
}


@media (max-width: 480px) {
  .title { font-size: 26px; line-height: 1.3; }
  .sub-title { font-size: 14px; }
  .btn { width: 90%; font-size: 13px; padding: 8px 14px; }
}
