<div class="cover-show">
  <div class="container mt-5 mb-5 text-left">
    <h1 class="font-weight-normal mb-5">投稿詳細</h1>

    <% if @comment.errors.any? %>
      <div class="card text-white bg-danger p-3 mb-4">
        <%= @comment.errors.count %>件のエラーが発生しました<br>
        <% @comment.errors.full_messages.each do |message| %>
          <%= message %><br>
        <% end %>
      </div>
    <% end %>

    <!-- 投稿者名 -->
    <p class="caption"><strong>ユーザー名：</strong><%= @post.user.name %></p>
    <div class="post-image mb-4">
      <%= attachment_image_tag @post, :image, format: 'jpeg', size: "400x300", class: "rounded shadow" if @post.image.present? %>
    </div>

    <!-- 投稿内容 -->
    <div class="post-content mb-4">
      <p class="caption"><strong>場所：</strong><%= @post.location %></p>
      <p class="post-subtitle">感想</p>
      <p id="text"><%= @post.text %></p>
    </div>

    <!-- 編集・削除ボタン -->
    <% if user_signed_in? && @post.user == current_user %>
      <div class="mb-3">
      <% if @post.user == current_user %>
        <%= link_to '編集する', edit_post_path(@post), class: "btn btn-info mr-3" %>
        <%= link_to '削除する', post_path(@post), data: { turbo_method: :delete, turbo_confirm: "本当に消しますか？" }, class: "btn btn-danger" %>
        <% end %>
      </div>
    <% end %>

    <!-- 投稿一覧へ戻る -->
    <div class="mb-5">
      <%= link_to '投稿一覧ページへ', posts_path, class: "btn btn-dark" %>
    </div>

    <!-- コメント欄 -->
    <div class="comments mt-5">
      <%= form_with(model: [@post, @comment], local: true) do |f| %>
        <%= f.text_area :comment, size: "60x3", placeholder: "コメントする", class: "form-control mb-2" %>
        <%= f.submit "送信する", class: "btn btn-success mb-4" %>
      <% end %>

      <p>コメント件数：<%= @comments.count %></p>

      <% @comments.each do |comment| %>
        <div class="comments-index mb-3 border p-3 rounded">
          <p>
            <strong><%= comment.user&.name || "ユーザーなし" %></strong>
            <span class="text-muted ml-2"><%= comment.created_at.strftime('%Y/%m/%d') %></span>
          </p>
          <p><%= comment.comment %></p>
          <% if comment.user == current_user %>
            <%= link_to "削除", post_comment_path(comment.post, comment), data: { turbo_method: :delete }, class: "btn-sm btn-danger" %>
          <% end %>
        </div>
      <% end %>

      <%= paginate @comments %>
    </div>
  </div>
</div>