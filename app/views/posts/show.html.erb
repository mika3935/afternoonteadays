<h2>店名</h2>
<p><%= @post.location %></p>

<h2>感想</h2>
<p><%= @post.text %></p>

<h2>画像</h2>
<% if @post.image.present? %>
  <%= attachment_image_tag @post, :image, format: 'jpeg', size: "300x300" %>
<% else %>
  <p>画像なし</p>
<% end %>

<br>
<%= link_to '編集する', edit_post_path(@post) %><br>
<%= link_to '削除する', post_path(@post), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %><br>
<%= link_to '投稿一覧へ', posts_path %>
