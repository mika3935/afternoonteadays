  /* 背景・中央配置 */
.cover {
  height: 100vh;
  width: 100%;
  display: table;
  background-image: url(<%= asset_path 'top-scaled.webp' %>);
  background-size: cover;
  background-position: center;
  position: relative;
}

.cover::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 192, 203, 0.3); /* 淡いピンクオーバーレイ */
  z-index: 0;
}

.text-center {
  display: table-cell;
  vertical-align: middle;
  text-align: center;
  position: relative;
  z-index: 1;
}

/* タイトル */
.title {
  font-family: 'Pacifico', cursive; /* 手書き風フォント */
  font-size: 48px;
  color: #fff;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  margin-bottom: 10px;
}

.sub-title {
  font-family: 'Noto Serif JP', serif;
  font-size: 20px;
  color: #fff;
  margin-bottom: 20px;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
}

/* ボタン */
.btn {
  border-radius: 20px;
  padding: 10px 20px;
  font-weight: bold;
  text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(to right, #f7c6c7, #f9a1b0);
  color: #fff;
}

.btn-primary:hover {
  background: linear-gradient(to right, #f9a1b0, #f7c6c7);
  cursor: pointer;
}

.btn-success {
  background: linear-gradient(to right, #a3e7d3, #66d9b3);
  color: #fff;
}

.btn-success:hover {
  background: linear-gradient(to right, #66d9b3, #a3e7d3);
  cursor: pointer;
}

/* ボタン間スペース */
.btn-group .mr-2 { margin-right: 10px; }
.btn-group .ml-2 { margin-left: 10px; }
